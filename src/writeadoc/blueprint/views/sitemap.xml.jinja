{% set now = _now.strftime('%Y-%m-%d') -%}
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
		<loc>{{ site.base_url }}/</loc>
		<lastmod>{{ now }}</lastmod>
	</url>
	{% for section, pages in site.pages -%}
		{% for page in pages -%}
	<url>
		<loc>{{ site.base_url }}{{ page.url }}</loc>
		<lastmod>{{ page.meta.get('date', now) }}</lastmod>
	</url>
		{%- endfor %}
	{%- endfor %}
	<url>
		<loc>{{ site.base_url }}/search/</loc>
		<lastmod>{{ now }}</lastmod>
	</url>
</urlset>
