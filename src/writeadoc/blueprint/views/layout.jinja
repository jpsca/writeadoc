{# def sidebar=False #}
<!DOCTYPE html>
<html lang="{{ site.lang }}" class="cs-system">

<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
<title>{{ page.title | striptags }} | {{ site.name | striptags }}</title>
<meta content="ie=edge" http-equiv="x-ua-compatible" />
<meta name="handheldfriendly" content="true" />
<meta name="viewport" content="initial-scale=1, width=device-width" />
<link rel="canonical" href="{{ site.base_url }}{{ page.url }}" />
<link rel="icon" href="/assets/images/favicon.svg" />
<link rel="apple-touch-icon" href="/assets/images/apple-touch-icon.png" />
<script src="/assets/js/color-scheme.js"></script>
<link rel="stylesheet" href="/assets/css/style.css?v={{ _get_random_id() }}" />
<link rel="stylesheet" href="/assets/css/layout.css?v={{ _get_random_id() }}" />
<link rel="stylesheet" href="/assets/css/index.css?v={{ _get_random_id() }}" />
<script type="module" src="/assets/js/turbo.min.js"></script>
<script type="module" src="/assets/js/code.js"></script>
<script type="module" src="/assets/js/search.js"></script>
{{ assets.render() -}}
<script src="/assets/js/lunr.min.js"></script>
{%- if site.lang != "en" %}
<script src="/assets/js/lunr.{{ site.lang }}.min.js"></script>
{%- endif %}
<Metadata />
<script defer data-domain="writeadoc.scaletti.dev" src="https://watcher.scaletti.dev/js/script.hash.outbound-links.js"></script>
<script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>
</head>

<body class="page-{{ page.id }}{% if sidebar %} has-sidebar{% endif %}">
  <div class="layout">
    <header class="header">
      <nav class="wrapper">
        <a class="header__brand" href="/" aria-label="{{ site.name }}">
          {# <img src="/assets/images/logo.svg" height="42" alt="{{ site.name }}" /> #}
          <span>{{ site.name }}</span>
        </a>
        <VersionPopover />
        <LanguagePopover />
        <div class="header__links">
          <a class="header__link-search" href="/search/">
            <svg width="24" height="24" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z" />
            </svg>
          </a>
          <a href="/docs/">
            <span>{{ _('DOCUMENTATION') }}</span>
          </a>
          <a href="{{ site.source_code }}" target="_blank" rel="noopener">
            <span>{{ _('SOURCE_CODE') }}</span>
          </a>
          {#<a href="#" target="_blank" rel="noopener">
            <span>{{ _('HELP') }}</span>
          </a>#}
        </div>
        <ColorScheme />
      </nav>
    </header>

    <main class="main">
      <Sidebar />
      <div class="page">
        <PageNav />
        <BannerArchived />
        {{ content }}
      </div>
    </main>
  </div>

  <script>
    window.strings = {
      COPY: "{{ _('COPY') }}",
      COPIED: "{{ _('COPIED') }}",
      NO_RESULTS_FOUND: "{{ _('NO_RESULTS_FOUND') }}",
    };
  </script>
</body>
</html>