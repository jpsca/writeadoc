{# import "./layout.jinja" as Layout #}
{# css "/assets/css/index.css" #}

<Layout>
  {% fill hero %}
  <div class="headline">
    <header>
      <h1>{{ page.title }}</h1>
      {% if page.meta.get("subtitle") %}<p>{{ page.meta.get("subtitle") }}</p>{% endif %}
    </header>
  </div>
  {% endfill %}

  <div class="page page--docs">
    <div class="page__content">
      <article>{{ page.content }}</article>
    </div>
  </div>
</Layout>
